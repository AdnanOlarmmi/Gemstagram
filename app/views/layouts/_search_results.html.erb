<%= turbo_frame_tag "search_results" do %>
    <% users.each do |u| %>
        <li class="mt-3">
            <div class="d-flex justify-content-between">
                <div class="d-flex gap-2">
                    <%= image_tag u.profile_picture.attached?  ? u.profile_picture : "default_profile_picture.jpg", style: "width: 2.5rem" %>
                    <div class="d-flex flex-column mx-3 justify-content-center">
                        <small
                            class="fw-bold"
                            style="max-width: 10rem; overflow: hidden; white-space: nowrap; text-overflow: ellipsis"
                        >
                            <%= link_to u, class: "a-decoration-none" do %>
                                <%= u.username %>
                            <% end %>
                        </small>
                    </div>
                </div>
            </div>
        </li>
    <% end %>
<% end %>
