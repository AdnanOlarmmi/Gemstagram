<div class="d-flex justify-content-between">
	<div class="d-flex gap-2">
		<%= image_tag suggestion.profile_picture.attached?  ? suggestion.profile_picture : "default_profile_picture.jpg", style: "width: 2.5rem" %>
		<div class="d-flex flex-column">
			<small
				class="fw-bold"
				style="max-width: 10rem; overflow: hidden; white-space: nowrap; text-overflow: ellipsis"
			>
				<%= link_to suggestion, class: "a-decoration-none", data: {turbo: 'false'} do %>
					<%= suggestion.username %>
				<% end %>
			</small>
			<small
				class="text-muted"
				style="max-width: 10rem;  font-size: .7rem; overflow: hidden; white-space: nowrap; text-overflow: ellipsis"
				>Suggested for you</small
			>
		</div>
	</div>
	<%= render "layouts/shared/follow_state", user: suggestion%>
</div>
